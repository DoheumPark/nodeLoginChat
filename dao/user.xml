<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user"> 
    <insert id="join">
        INSERT INTO t_user
        (uid, upw, salt, nick_nm)
        VALUES
        (#{uid}, #{upw}, #{salt}, #{nick_nm})
    </insert>

    <select id="getUser">
        SELECT * FROM t_user WHERE uid = #{uid}
    </select>

    <select id="getToken">
        SELECT * FROM t_token
        WHERE i_user = ${i_user}
    </select>

    <insert id="regToken">
        INSERT INTO t_token
        (i_user, token)
        VALUES
        (${i_user}, #{token})
    </insert>

    <update id="modToken">
        UPDATE t_token
        SET use_datetime = now()
        <if test="token != null and token != ''">
            , token = #{token}
        </if>
        WHERE i_user = ${i_user}
    </update>

    <delete id="delToken">
        DELETE FROM t_token WHERE i_user = ${i_user}
    </delete>
</mapper>