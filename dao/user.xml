<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user"> 
    <insert id="join">
        INSERT INTO t_user
        (uid, upw, salt, nick_nm)
        VALUES
        (#{uid}, #{upw}, #{salt}, #{nick_nm})
    </insert>

    <select id="getUser">
        SELECT * FROM t_user WHERE uid = #{uid}
    </select>
</mapper>